{
  "name": "stockman_api",
  "version": "1.0.0",
  "description": "Restful API for back-end requests of stockman",
  "main": "dist/app/app.js",
  "scripts": {
    "postinstall": "typings install && node ./scripts/app_config.js && tsc",
    "prestart": "tsc && cp ./app/config/*.json ./dist/app/config/",
    "start": "NODE_ENV=development nodemon dist/app/app.js",
    "preprod": "tsc",
    "prod": "NODE_ENV=production nodemon dist/app/app.js",
    "pretest": "tsc",
    "test": "sh ./scripts/start_tests.sh",
    "lint": "tslint -c tslint.json app/**/*.ts",
    "clean": "rm -rf node_modules/ dist/ typings/ log/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chipp972/stock_manager_api.git"
  },
  "keywords": [],
  "author": "Pierre-charles Nicolas",
  "license": "MIT",
  "private": "true",
  "bugs": {
    "url": "https://github.com/chipp972/stock_manager_api/issues"
  },
  "homepage": "https://github.com/chipp972/stock_manager_api#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.1.0",
    "tslint": "^3.10.2"
  },
  "dependencies": {
    "bcryptjs": "^2.3.0",
    "body-parser": "^1.15.1",
    "express": "^4.14.0",
    "helmet": "^2.1.2",
    "jsonwebtoken": "^7.1.9",
    "jwt-simple": "^0.5.0",
    "mkdirp": "^0.5.1",
    "mkdirp-promise": "^2.0.0",
    "mongodb": "^2.2.4",
    "mongoose": "^4.5.8",
    "mongoose-auto-increment": "^5.0.1",
    "morgan": "^1.7.0",
    "multer": "^1.1.0",
    "nodemailer": "^2.5.0",
    "passport": "^0.3.2",
    "passport-jwt": "^2.1.0",
    "passport-strategy": "^1.0.0",
    "pm2": "^1.1.3",
    "typescript": "^1.8.10",
    "typings": "^1.0.4",
    "winston": "^2.2.0",
    "winston-daily-rotate-file": "^1.2.0"
  }
}
