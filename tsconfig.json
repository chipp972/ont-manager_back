{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": ".",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true,
  "buildOnSave": false
}
